<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="my_dialog_noactionBar" parent="@android:style/Theme.Holo.Light.Dialog.MinWidth">
        <item name="android:typeface">sans</item>
        <item name="android:background">@color/secondary_text_base</item>
        <item name="android:textColor">@color/primary_light_base</item>
    </style>



    <!--==================================НОВАЯ РЕДАКЦИЯ ТЕМ=====================================-->

    <style name="DorSbor_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:alertDialogTheme">@style/ThemeListPreferences</item>
    </style>


    <style name="ThemeListPreferences" parent="@android:style/Theme.Holo.Dialog.MinWidth">
        <item name="android:windowBackground">@color/secondary_text_base</item>
        <item name="android:alertDialogStyle">@style/ListPrefAlertDialogStyle</item>
        <item name="android:textColorAlertDialogListItem">@color/white</item>

    </style>


    <style name="ListPrefAlertDialogStyle">
        <item name="android:fullDark"    >@android:color/transparent</item>
        <item name="android:topDark"     >@android:color/transparent</item>
        <item name="android:centerDark"  >@android:color/transparent</item>
        <item name="android:bottomDark"  >@android:color/transparent</item>
        <item name="android:fullBright"  >@android:color/transparent</item>
        <item name="android:topBright"   >@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
    </style>

